@{
	ViewData["Title"] = "Home Page";
}

@section Styles{ 
	<style>
		.carousel-caption { bottom: unset; top: 100px; background-color: rgba(0,0,0,.3); border-radius: 2em; padding-left: 1em; padding-right: 1em; }
			.carousel-caption h2 { font-size: 48px; }
			.carousel-caption p { font-size: 16px; }
		section { padding: 4em 0; font-size: 24px; line-height: 1.75em; text-align: justify; }
		section h2 { text-align: center; font-size: 36px; text-transform: uppercase; margin-bottom: 1em; }
			section ul { padding-left: 0; }
			section li { list-style-position: inside; }
	</style>
}

<div id="home-carousel" class="carousel slide" data-ride="carousel" data-interval="10000">
	<ol class="carousel-indicators">
		<li data-target="#home-carousel" data-slide-to="0" class="active"></li>
		<li data-target="#home-carousel" data-slide-to="1"></li>
		<li data-target="#home-carousel" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div id="carousel-item-1" class="item active">
			<img src="~/images/coder.png" alt="Tampa" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<h2>We're Coders</h2>
				<p>
					We are software development professionals of every background, technology stack, and skill level.
				</p>
				<p><a class="btn btn-default" href="#about">Learn More</a></p>
			</div>
		</div>
		<div id="carousel-item-2" class="item">
			<img src="~/images/tampa.png" alt="Tampa" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<h2>We're Local</h2>
				<p>
					We live and work in the Tampa Bay Area
				</p>
				<p><a class="btn btn-default" href="#about">Learn More</a></p>
			</div>
		</div>
		<div id="carousel-item-2" class="item">
			<img src="~/images/team.png" alt="Tampa" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<h2>We're Available</h2>
				<p>
					Do you need a coder? Need help with a software project?
				</p>
				<p>
					We're available.
				</p>
				<p><a class="btn btn-default" href="#">Find a Coder</a></p>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#home-carousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#home-carousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<section id="about" class="theme-color">
	<div class="container">
		<h2>Who We Are</h2>
		<p>
			Tampa Bay Coders is a community of professional, amateur, and aspiring software developers in the Tampa Bay Area.
			We live and work in cities like Tampa, Saint Petersburg, Clearwater, Brandon, Largo, and more.		
			This is where we share information with each other and the wider community.
		</p>
	</div>
</section>

<section id="support" class="theme-inverse-light">
	<div class="container">
		<h2>Supporting the Coder Community</h2>
		<p>
			Tampa Bay Coders was created by local devs for local devs.
			Local coders can come here to find out about local events,
			get advice or help on technical challenges,
			or just have a conversation with someone that gets it.
		</p>
		<ul>
			<li>Get news and information on the local tech scene.</li>
			<li>Find help on a problem or project.</li>
			<li>Share resources for education, training, or career development.</li>
		</ul>
	</div>
</section>

<section id="opportunities" class="theme-color">
	<div class="container">
		<h2>Opportunities</h2>
		<p>
			Developers can find more opportunities by creating a profile on Tampa Bay Coders.
			Whether you're looking for work or just want to be known in the community.
			Whether you're available for a full-time job or a freelance contract. 
			Your profile can show potential employers and clients who you are and what you can do.
		</p>
		<ul>
			<li>Showcase your skills and achievements.</li>
			<li>Network with fellow coders.</li>
			<li>Share tips and tricks for finding jobs or projects.</li>
		</ul>
	</div>
</section>

<section id="fellowship" class="theme-inverse-light"">
	<div class="container">
		<h2>Get Together</h2>
		<p>
			Know of an event that other coders would appreciate?
			Need some help on a project or code problem?
			Want some career advice?
		</p>
		<ul>
			<li>Start a conversation in the forums.</li>
			<li>Find a mentor or protégé.</li>
			<li>Grab some coffee or tea with a fellow coder.</li>
		</ul>
	</div>
</section>

<section id="find" class="theme-color">
	<div class="container">
		<h2>Find a Coder</h2>
		<p>
			Are you looking for a software development professional in the Tampa Bay Area?
			You can browse our list of profiles or search for a coder based on some general criteria.
			In the future we also plan to offer a service for helping local businesses understand
			their software needs and guide them to finding the resources that best fit those needs.
		</p>
	</div>
</section>
