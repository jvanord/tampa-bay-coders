@model Profile

<div class="container theme">
	<h2>@(string.IsNullOrWhiteSpace(Model.Id) ? "Create" : "Edit") Your Profile</h2>
	<form class="form-horizontal">
		<div class="form-group">
			<label asp-for="PhotoUrl" class="control-label col-sm-3">Photo Url</label>
			<div class="col-sm-9">
				<input asp-for="PhotoUrl" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Email" class="control-label col-sm-3">Email Address</label>
			<div class="col-sm-9">
				<input asp-for="Email" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="GitHubUrl" class="control-label col-sm-3">GitHub</label>
			<div class="col-sm-9">
				<input asp-for="GitHubUrl" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="StackOverflowCvUrl" class="control-label col-sm-3">Stack Overflow CV</label>
			<div class="col-sm-9">
				<input asp-for="StackOverflowCvUrl" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="LinkedInUrl" class="control-label col-sm-3">Linked-In</label>
			<div class="col-sm-9">
				<input asp-for="LinkedInUrl" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="FacebookUrl" class="control-label col-sm-3">Facebook</label>
			<div class="col-sm-9">
				<input asp-for="FacebookUrl" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="TwitterHandle" class="control-label col-sm-3">Twitter</label>
			<div class="col-sm-9">
				<input asp-for="TwitterHandle" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Summary" class="control-label col-sm-3">About You</label>
			<div class="col-sm-9">
				<textarea asp-for="Summary" class="form-control"></textarea>
			</div>
		</div>
	</form>
</div>
